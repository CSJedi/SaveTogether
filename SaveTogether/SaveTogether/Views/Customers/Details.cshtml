@model SaveTogether.DAL.Entities.Customer

@{
    ViewBag.Title = "Details";
}
<div style="margin: 0% 40% 0% 40%;">
    <div>
        <h3>Details</h3>
        <hr />
        <dl class="dl-horizontal">

            <dt>
                <b>Email: </b>@Html.DisplayFor(model => model.Email)
            </dt>

            <dt>
                <b>Name: </b>@Html.DisplayFor(model => model.UserName)
            </dt>

            <dt>
                <b>Second name: </b>@Html.DisplayFor(model => model.SecondName)
            </dt>

        </dl>
    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>