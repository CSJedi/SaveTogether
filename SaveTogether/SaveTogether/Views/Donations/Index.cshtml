@model IEnumerable<SaveTogether.DAL.Entities.Donation>

@{
    ViewBag.Title = "Index";
}
<link href="~/Content/Styles/tables.css" rel="stylesheet" />

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="tableItem">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Region.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OperationDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonId)
            </th>
            <th></th>
        </tr>
    </thead>
    
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Region.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OperationDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PersonId)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
                @Html.ActionLink("Details", "Details", new {id = item.Id}) |
                @Html.ActionLink("Delete", "Delete", new {id = item.Id})
            </td>
        </tr>
    }

</table>
