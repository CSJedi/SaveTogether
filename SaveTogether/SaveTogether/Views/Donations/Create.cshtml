@model SaveTogether.DAL.Entities.Donation

@{
    ViewBag.Title = "Create";
}
<div style="margin: 0% 15% 0% 40%;">
    <div class="title" >
        <h2>Create donation</h2>
    </div>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr/>
            @Html.ValidationSummary(true, "", new {@class = "text-danger"})
            <div class="form-group" style="margin: 15px;">
                @Html.LabelFor(model => model.Sum, htmlAttributes: new {@class = "control-label col-sm-2"})
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Sum, new {htmlAttributes = new {@class = "form-control", style = "width: 260px; height: 20px;" } })
                    @Html.ValidationMessageFor(model => model.Sum, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group" style="margin: 15px;">
                @Html.Label("Region", htmlAttributes: new {@class = "control-label col-sm-2"})
                <div class="col-md-10" style="height: 20px;">
                    @Html.DropDownList("RegionId", null, htmlAttributes: new {@class = "form-control", style = "width: 260px; height: 20px;" })
                    @Html.ValidationMessageFor(model => model.RegionId, "", new {@class = "text-danger"})
                </div>
            </div>
            <form>
                <button type="submit" class="icon icon-ok button" style="margin: 1em 1em 1em 4em;">Next</button> 
            </form>
        </div>

    }
</div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
